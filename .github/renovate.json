{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended", ":prHourlyLimit2"],
  "enabledManagers": ["npm", "github-actions"],
  "labels": ["dependencies"],
  "dependencyDashboard": true,

  "prCreation": "immediate",
  "stabilityDays": 7,

  "vulnerabilityAlerts": {
    "description": "Security updates for npm dependencies",
    "stabilityDays": 0,
    "automerge": false,
    "labels": ["security", "critical"]
  },

  "lockFileMaintenance": {
    "description": "Weekly lock file maintenance",
    "enabled": true,
    "schedule": ["before 6am on wednesday"],
    "automerge": false,
    "dependencyDashboardApproval": true
  },

  "packageRules": [
    {
      "description": "Automerge non-major updates",
      "matchUpdateTypes": ["minor", "patch", "digest", "pin"],
      "automerge": true
    },
    {
      "description": "NPM Specific: Ensure lockfile integrity",
      "matchManagers": ["npm"],
      "postUpdateOptions": ["npmDedupe"]
    }
  ]
}
