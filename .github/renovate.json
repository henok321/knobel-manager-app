{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended", ":prHourlyLimit2"],
  "enabledManagers": ["npm", "github-actions"],
  "labels": ["dependencies"],
  "dependencyDashboard": true,

  "prCreation": "immediate",
  "stabilityDays": 7,

  "vulnerabilityAlerts": {
    "stabilityDays": 0,
    "automerge": false,
    "labels": ["security", "critical"]
  },

  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["before 6am on wednesday"],
    "automerge": false,
    "dependencyDashboardApproval": true
  },

  "packageRules": [
    {
      "description": "Automerge non-major updates (AFTER stability days pass)",
      "matchUpdateTypes": ["minor", "patch", "digest", "pin"],
      "automerge": true
    },
    {
      "description": "DevDependencies are lower risk, safe to automerge",
      "matchDepTypes": ["devDependencies"],
      "automerge": true,
      "addLabels": ["dev-dependencies"]
    },
    {
      "description": "Group specific patterns to reduce noise",
      "groupName": "TypeScript Definitions",
      "addLabels": ["typescript"],
      "matchPackageNames": ["/^@types\\//"],
      "matchUpdateTypes": ["major"],
      "enabled": false
    },
    {
      "description": "NPM Specific: Ensure lockfile integrity",
      "matchManagers": ["npm"],
      "postUpdateOptions": ["npmDedupe"]
    }
  ]
}
