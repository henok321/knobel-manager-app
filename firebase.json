{
  "hosting": {
    "public": "dist",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "/api/**",
        "destination": "https://your-production-api-url/**"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
